<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>When a traveler&#39;s trip is disrupted, load all the bookings for the trip which have the Rebooking Required flag set to true</description>
    <interviewLabel>BOT - Load Impacted Bookings for Trip {!$Flow.CurrentDateTime}</interviewLabel>
    <label>BOT - Load Impacted Bookings for Trip</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Look through all bookings for this trip which have the &quot;Rebooking Required&quot; flag set</description>
        <name>Load_Impacted_Bookings</name>
        <label>Load Impacted Bookings</label>
        <locationX>177</locationX>
        <locationY>50</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <filters>
            <field>tth_Rebooking_Required__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>tth_Trip__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>objTrip.Id</elementReference>
            </value>
        </filters>
        <object>tth_Booking__c</object>
        <outputReference>objImpactedBookings</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>tth_Status__c</queriedFields>
        <queriedFields>tth_Booking_Type__c</queriedFields>
        <queriedFields>tth_Booking_Start__c</queriedFields>
        <queriedFields>tth_Booking_Start_Date__c</queriedFields>
        <queriedFields>tth_Booking_End__c</queriedFields>
        <queriedFields>tth_Booking_End_Date__c</queriedFields>
        <queriedFields>tth_Time__c</queriedFields>
        <queriedFields>tth_Allocated_Seat__c</queriedFields>
        <queriedFields>tth_Location__c</queriedFields>
        <queriedFields>tth_Booking_Reference__c</queriedFields>
        <queriedFields>tth_Bot_Summary__c</queriedFields>
        <queriedFields>tth_Flight_Number__c</queriedFields>
        <queriedFields>tth_Traveler__c</queriedFields>
        <sortField>tth_Booking_Start__c</sortField>
        <sortOrder>Asc</sortOrder>
    </recordLookups>
    <start>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <connector>
            <targetReference>Load_Impacted_Bookings</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <name>objImpactedBookings</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <objectType>tth_Booking__c</objectType>
    </variables>
    <variables>
        <name>objTrip</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <objectType>tth_Trip__c</objectType>
    </variables>
</Flow>
