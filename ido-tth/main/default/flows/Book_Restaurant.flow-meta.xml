<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Creates a Restaurant Booking allocated to the traveler&#39;s Next Trip (look up field on Contact)</description>
    <formulas>
        <name>RestConfirmationText</name>
        <dataType>String</dataType>
        <expression>&#39;OK &#39; + {!objContact.FirstName} + &#39;, you are all booked in to eat at &#39;+ {!objRecommendation.Name} + &#39; on &#39; +  TEXT({!When}) + &#39; at &#39; + {!Time} + &#39; and your confirmation number is &#39; + {!newBooking.tth_Booking_Confirmation__c}</expression>
    </formulas>
    <formulas>
        <name>RestNameandAddress</name>
        <dataType>String</dataType>
        <expression>{!objRecommendation.Name} + &#39; - &#39; + {!objRecommendation.tth_Address__c}</expression>
    </formulas>
    <interviewLabel>Book Restaurant {!$Flow.CurrentDateTime}</interviewLabel>
