            <value>
                <elementReference>RestNameandAddress</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>tth_Status__c</field>
            <value>
                <stringValue>Confirmed</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>tth_Time__c</field>
            <value>
