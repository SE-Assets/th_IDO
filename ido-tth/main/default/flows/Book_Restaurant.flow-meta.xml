    <recordCreates>
        <name>Create_Restaurant_Booking</name>
        <label>Create Restaurant Booking</label>
        <locationX>489</locationX>
        <locationY>48</locationY>
        <assignRecordIdToReference>confirmedBookingID</assignRecordIdToReference>
        <connector>
            <targetReference>Get_Booking_Reference</targetReference>
        </connector>
        <inputAssignments>
            <field>tth_Booking_End__c</field>
            <value>
                <elementReference>When</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>tth_Booking_Start__c</field>
            <value>
